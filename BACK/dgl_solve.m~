% DGL Solve
% Aufruf:
% ta=0; te=10; y0=[0 1];
% [t,y]=ode23(@fu1,[ta te],y0); 

ta=0; te=10; y0=[1 2];
[t,y]=ode23(@fu1,[ta te],y0); 
f1=figure(1);
plot(t,y),grid on;


t = [0 10];            % Simulationsdauer 
y0 = [5 0 0 0];     % Anfangsbedingungen [x1 x1p x2 x2p] 
[tsim,xsim] = ode45(@odetest,t,y0); 
f1=figure(1);
plot(tsim,xsim),grid on;

