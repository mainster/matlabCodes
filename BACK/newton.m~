%% ********** Newton-Verfahren zur bestimmung von Nullstellen ********* %%
function [x]=newton(fun,x0,tol,maxiter)
%syms x;

x(1)=x0;

for i=1:maxiter
    x(i+1)=x(i)-(f(x(i))/(ableitung(@fun,x(i))));
    if (abs(f(x))<tol)
        disp('Fertig')
    end;
    if (n==maxiter)
        disp('Break, max. Iterationen erreicht')
    end;
end;


end