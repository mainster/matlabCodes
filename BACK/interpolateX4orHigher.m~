
delete(findall(0,'type','line'))    % Inhalte der letztem plots l√∂schen, figure handle behalten


fc=1000;
Tc=1/fc;
fs=20e3;
Ts=1/fs;
L=80e6*Tc;
t=[0:1:L-1]*Ts;

s1=sin(2*pi*fc*t);
s2=chirp(t,500,L*Ts,2000);

s3=sin(2*pi*500*t);
for k=501:1:2000
    s3=s3+sin(2*pi*k*t);
end

S1 = fft(s1,L);
S1amp = abs(S1);
S1ampshift=fftshift(S1amp/L);

S2 = fft(s2,L);
S2amp = abs(S2);
S2ampshift=fftshift(S2amp/L);

S3 = fft(s3,L);
S3amp = abs(S3);
S3ampshift=fftshift(S3amp/L);

tickf = fs/2*linspace(-1,1,L);

f6=figure(6);

s3x2=interp1(t,s3,

% h.f = figure; 
% plot(rand(1,10)); 
% grid on; 
% h.a=gca; 

subplot(321);
plot(tickf,10*log10(S1ampshift));grid on; 
title('Spektrum der kompl. Schwingung mit nicht- idealem Verlauf')
xlabel('Frequenz (Hz)')
ylabel('| Fcmpx(f) | ')
title(['fc =' num2str(fc,'%.d') ' Hz'...
       '   fs = ' num2str(fs,'%.d') ...
       '   Ts = 0' ...
       ])

subplot(322);
plot(tickf,10*log10(S2ampshift));grid on; 
title('Spektrum der kompl. Schwingung mit nicht- idealem Verlauf')
xlabel('Frequenz (Hz)')
ylabel('| Fcmpx(f) | ')
title(['fc =' num2str(fc,'%.d') ' Hz'...
       '   fs = ' num2str(fs,'%.e') ...
       '   Ts = ' num2str(1/fs,'%.3e')...
       ])

   
subplot(323);
plot(tickf,10*log10(S3ampshift));grid on; 
title('Spektrum der kompl. Schwingung mit nicht- idealem Verlauf')
xlabel('Frequenz (Hz)')
ylabel('| Fcmpx(f) | ')
title(['fc =' num2str(fc,'%.d') ' Hz'...
       '   fs = ' num2str(fs,'%.e') ...
       '   Ts = ' num2str(1/fs,'%.3e')...
       ])

